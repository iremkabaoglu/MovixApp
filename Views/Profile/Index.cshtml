@model Microsoft.AspNetCore.Identity.IdentityUser

<h2>Profil Bilgilerim</h2>
<hr />

<div class="card p-4 shadow-sm" style="max-width:400px;">
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>Kullanıcı Adı:</strong> @Model.UserName</p>
    <p><strong>Kayıt Tarihi:</strong> @Model.LockoutEnd?.UtcDateTime.ToString("dd.MM.yyyy") ?? "Bilinmiyor"</p>
    <a class="btn btn-warning mt-2" asp-area="Identity" asp-page="/Account/Manage/ChangePassword">Şifre Değiştir</a>
</div>
