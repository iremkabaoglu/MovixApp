@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MovixApp</title>

    <!-- Bootstrap (tek kaynak) + Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Uygulama stilleri (Bootstrap'tan SONRA) -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="app-shell">
    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark navbar-custom px-4">
        <a class="navbar-brand text-main fw-bold fs-3" asp-controller="Home" asp-action="Index">Movix</a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Menüyü Aç/Kapat">
            <span class="navbar-toggler-icon"></span>
        </button>
        <form class="d-none d-lg-flex ms-3 me-auto position-relative" role="search"
              onsubmit="return goSearch();">
            <input id="navSearch" class="form-control form-control-sm bg-dark text-light"
                   type="search" placeholder="Film ara..." autocomplete="off"
                   aria-label="Ara" />
            <div id="navSuggest" class="list-group position-absolute w-100 mt-1 d-none"
                 style="max-height:320px; overflow:auto; z-index: 2000;"></div>
        </form>

        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto align-items-lg-center">
                <li class="nav-item">
                    <a class="nav-link text-light" asp-controller="Home" asp-action="Index">Anasayfa</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-light" asp-controller="Movies" asp-action="Index">Filmler</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-light" asp-controller="Blog" asp-action="Index">Haberler</a>
                </li>

                @if (SignInManager.IsSignedIn(User))
                {
                    var username = (await UserManager.GetUserNameAsync(await UserManager.GetUserAsync(User))) ?? "";
                    var shortName = username.Contains("@") ? username.Split('@')[0] : username;

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-light d-flex align-items-center"
                           href="#" id="userMenu" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-person-circle me-1"></i>@shortName
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" asp-controller="Profile" asp-action="Index">Profil</a></li>
                            <li><hr class="dropdown-divider" /></li>
                            <li>
                                <form method="post" asp-area="Identity" asp-page="/Account/Logout"
                                      asp-route-returnUrl="@Url.Action("Index","Home")">
                                    <button type="submit" class="dropdown-item">Çıkış Yap</button>
                                </form>
                            </li>
                        </ul>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Login">Giriş Yap</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Register">Kayıt Ol</a>
                    </li>
                }
            </ul>
        </div>
    </nav>

    <!-- İÇERİK -->
    <main class="container py-4 flex-fill">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer class="app-footer">
        <div class="container d-flex justify-content-between align-items-center">
            <span>&copy; @DateTime.Now.Year - MovixApp</span>
            <a class="link-light" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Scripts (tek bundle) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
