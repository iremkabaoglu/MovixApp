@model List<MovixApp.Models.Movie>

@{
    ViewData["Title"] = "Popüler Filmler";
}

<h2>Popüler Filmler</h2>

<div style="display:flex; flex-wrap:wrap; gap:20px;">
    @if (Model != null && Model.Any())
    {
        foreach (var movie in Model)
        {
            <div style="width:200px; border:1px solid #ddd; padding:10px; border-radius:5px; background-color:#f9f9f9;">
                <img src="https://image.tmdb.org/t/p/w200@movie.PosterPath" alt="@movie.Title" style="width:100%; height:auto;" />
                <h4>@movie.Title</h4>
                <p>@movie.Overview</p>
            </div>
        }
    }
    else
    {
        <p>Film bulunamadı.</p>
    }
</div>
