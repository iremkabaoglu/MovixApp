@model List<MovixApp.Models.Movie>

<h2 style="color:white;">Popüler Filmler</h2>

@if (Model != null && Model.Any())
{
    <div style="display:flex; flex-wrap:wrap; gap:20px;">
        @foreach (var movie in Model)
        {
            <div style="width:200px; background:#222; color:white; padding:10px; border-radius:5px;">
                <img src="https://image.tmdb.org/t/p/w200@movie.PosterPath"
                     alt="@movie.Title" style="width:100%; border-radius:5px;" />
                <h4>@movie.Title</h4>
                <p><strong>Puan:</strong> @movie.VoteAverage</p>
                <p style="font-size:13px;">@movie.Overview</p>
            </div>
        }
    </div>
}
else
{
    <p style="color:white;">Film bulunamadı.</p>
}
