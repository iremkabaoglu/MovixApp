@model IEnumerable<MovixApp.Models.Movie>
@{
    ViewData["Title"] = "Popüler Filmler";
}

<div class="content-inner">
    <!-- SLIDER -->
    <div id="movieCarousel" class="carousel slide mb-5" data-bs-ride="carousel" data-bs-interval="4000">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#movieCarousel" data-bs-slide-to="0" class="active"></button>
            <button type="button" data-bs-target="#movieCarousel" data-bs-slide-to="1"></button>
            <button type="button" data-bs-target="#movieCarousel" data-bs-slide-to="2"></button>
            <button type="button" data-bs-target="#movieCarousel" data-bs-slide-to="3"></button>
        </div>

        <div class="carousel-inner rounded-3 shadow-lg overflow-hidden">
            <div class="carousel-item active">
                <img src="~/images/1.jpg" class="d-block w-100" alt="">
                <div class="carousel-caption custom-caption-top text-start">
                    <h3 class="mb-2">Bu Hafta Öne Çıkanlar</h3>
                    <p class="mb-3">Yeni fragmanlar ve listeler burada.</p>
                    <a asp-controller="Movies" asp-action="Index" class="btn btn-sm btn-danger">Keşfet</a>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/images/2.jpg" class="d-block w-100" alt="">
                <div class="carousel-caption"><h3>Bilim Kurgu Kuşağı</h3><p>Uzak galaksiler, yakın tehlikeler.</p></div>
            </div>
            <div class="carousel-item">
                <img src="~/images/3.jpg" class="d-block w-100" alt="">
                <div class="carousel-caption text-end"><h3>Aksiyon Zamanı</h3><p>Adrenalin yüksek olsun.</p></div>
            </div>
            <div class="carousel-item">
                <img src="~/images/4.jpg" class="d-block w-100" alt="">
                <div class="carousel-caption"><h3>Kült Klasikler</h3><p>Tekrar tekrar izlenecekler.</p></div>
            </div>
        </div>

        <button class="carousel-control-prev" type="button" data-bs-target="#movieCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#movieCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>
    </div>
 
    <!-- POPÜLER FİLMLER -->
    <section>
        <h3 class="section-title">Popüler Filmler</h3>

        <div class="row movie-grid">
            @if (Model != null && Model.Any())
            {
                foreach (var movie in Model)
                {
                    var poster = string.IsNullOrEmpty(movie.PosterPath)
                    ? Url.Content("~/images/no-poster.png")
                    : $"https://image.tmdb.org/t/p/w342{movie.PosterPath}";
                    var overview = movie.Overview ?? "";

                    <div class="col-6 col-md-4 col-xl-3">
                        <div class="card movie-card h-100">
                            <div class="poster-box poster-contain">
                                @* anasayfa: tamamı görünsün *@
                                <img src="@poster" alt="@movie.Title" />
                            </div>
                            <div class="card-body">
                                <h6 class="card-title mb-1 text-truncate" title="@movie.Title">@movie.Title</h6>
                                <p class="small text-secondary mb-2">
                                    @(overview.Length > 110 ? overview.Substring(0, 110) + "..." : overview)
                                </p>
                                <div class="small">⭐ @movie.VoteAverage</div>
                            </div>
                            <div class="card-footer bg-transparent border-0 pt-0">
                                <a class="btn btn-sm btn-primary" asp-action="Details" asp-route-id="@movie.Id">Detaylar</a>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12">
                    <div class="alert alert-dark border-0">Gösterilecek film bulunamadı.</div>
                </div>
            }
        </div>
    </section>


</div> 
